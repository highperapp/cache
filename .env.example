# HighPer Cache Configuration

# Engine preferences (auto|rust_ffi|amphp_parallel|pure_php)
CACHE_ENGINE=auto
CACHE_RUST_FFI_ENABLED=true
CACHE_AMPHP_PARALLEL_ENABLED=true
CACHE_UV_ENABLED=true

# Default cache store (redis|memcached|memory|file)
CACHE_DEFAULT_STORE=redis

# Performance tuning
CACHE_ASYNC_THRESHOLD=1000
CACHE_BATCH_SIZE=100
CACHE_MEMORY_LIMIT=256M
CACHE_TTL_DEFAULT=3600

# Redis configuration
CACHE_REDIS_HOST=127.0.0.1
CACHE_REDIS_PORT=6379
CACHE_REDIS_PASSWORD=
CACHE_REDIS_DATABASE=0
CACHE_REDIS_POOL_MIN=5
CACHE_REDIS_POOL_MAX=20
CACHE_REDIS_TIMEOUT=30
CACHE_REDIS_RETRY_DELAY=100

# Memcached configuration
CACHE_MEMCACHED_SERVERS=127.0.0.1:11211
CACHE_MEMCACHED_POOL_MIN=3
CACHE_MEMCACHED_POOL_MAX=15
CACHE_MEMCACHED_TIMEOUT=30
CACHE_MEMCACHED_RETRY_DELAY=100

# File cache configuration
CACHE_FILE_PATH=storage/cache
CACHE_FILE_PERMISSIONS=0755

# Memory cache configuration
CACHE_MEMORY_MAX_SIZE=100M
CACHE_MEMORY_CLEANUP_INTERVAL=300

# AMPHP configuration
CACHE_AMPHP_WORKERS=auto
CACHE_AMPHP_TASK_LIMIT=1000
CACHE_AMPHP_WORKER_MEMORY_LIMIT=256M

# FFI configuration
CACHE_FFI_LIBRARY_PATH=src/FFI/libhighper_cache.so
CACHE_FFI_ENABLED=true

# Monitoring and debugging
CACHE_STATS_ENABLED=true
CACHE_DEBUG=false
CACHE_LOG_LEVEL=info